{
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "at-rule-no-unknown": null,
      "order/order": [
        "custom-properties",
        "declarations"
      ],
      "order/properties-alphabetical-order": true,
      "selector-pseudo-element-no-unknown": [
        true,
        {
          "ignorePseudoElements": ["v-deep"]
        }
      ]
    }
  }